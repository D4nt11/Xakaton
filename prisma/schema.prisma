generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id         Int     @id @default(autoincrement())
  firstName  String
  lastName   String
  patronymic String?
  email      String  @unique
  snils      String  @unique
  password   String
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String?
  lastName    String?
  patronymic  String?
  email       String   @unique
  idCard      String   @unique
  password    String
  dateOfBirth DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model Indicator {
  id    Int     @id @default(autoincrement())
  name  String
  image String?

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model UserIndicators {
  idUI        Int @id @default(autoincrement())
  userId      Int
  indicatorId Int

  @@unique([userId, indicatorId])

  users User[]

  indicators Indicator[]

  pulsIndicators PulseIndicator[]

  heightIndicators HeightIndicator[]

  weightIndicator WeightIndicator[]

  pressureIndicator PressureIndicator[]

  dreamIndicator DreamIndicator[]

  stepsIndicator StepIndicator[]
}

model PulseIndicator {
  id        Int      @id @default(autoincrement())
  idUI      Int
  value     Int
  createdAt DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model HeightIndicator {
  id        Int      @id @default(autoincrement())
  idUI      Int
  value     Int
  createdAt DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model WeightIndicator {
  id        Int      @id @default(autoincrement())
  idUI      Int
  value     Int
  createdAt DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model PressureIndicator {
  id        Int      @id @default(autoincrement())
  idUI      Int
  valueUp   Int
  valueDown Int
  createdAt DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model DreamIndicator {
  id        Int      @id @default(autoincrement())
  idUI      Int
  value     Int
  createdAt DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model StepIndicator {
  id        Int      @id @default(autoincrement())
  idUI      Int
  value     Int
  createdAt DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

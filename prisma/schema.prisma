generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id         Int     @id @default(autoincrement())
  firstName  String
  lastName   String
  patronymic String?
  email      String  @unique
  snils      String  @unique
  password   String
}

model User {
  id           Int      @id @default(autoincrement())
  firstName    String?
  lastName     String?
  patronymic   String?
  email        String   @unique
  snils        String   @unique
  password     String
  dateOfBearth DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model Indicator {
  id    Int    @id @default(autoincrement())
  name  String
  image String

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model UserIndicators {
  idUI        Int @id @default(autoincrement())
  userId      Int @unique
  indicatorId Int @unique

  users User[]

  indicators Indicator[]

  heartIndicators HeartIndicator[]

  liverIndicators LiverIndicator[]
}

model HeartIndicator {
  id    Int @id @default(autoincrement())
  idUI  Int
  value Int

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}

model LiverIndicator {
  id        Int      @id @default(autoincrement())
  idUI      Int
  value     Int
  createdAt DateTime

  UserIndicators     UserIndicators? @relation(fields: [userIndicatorsIdUI], references: [idUI])
  userIndicatorsIdUI Int?
}
